<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_item_layout"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/show_item_num"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#968e8e"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show_item_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/show_item_artist"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/music_item_more"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/more_vertical_icon" />

</LinearLayout>